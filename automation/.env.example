# Environment Variables for DesignForge
# Copy this file to .env and fill in your API keys
# IMPORTANT: Never commit .env to version control!

# ========================================
# AI Model API Keys
# ========================================

# Replicate (for Stable Diffusion SDXL, Flux)
# Get your key at: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=r8_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# OpenAI (for DALL-E 3, GPT-4)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Anthropic Claude (for code generation in v3.0)
# Get your key at: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Midjourney (unofficial API - if using)
MIDJOURNEY_API_KEY=your_midjourney_api_key_here

# ========================================
# Database Configuration
# ========================================

# SQLite (default for development)
DATABASE_URL=sqlite:///./designforge.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/designforge

# ========================================
# Application Configuration
# ========================================

# Environment: development, staging, production
APP_ENV=development

# Debug mode
DEBUG=true

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ========================================
# Budget & Cost Tracking
# ========================================

# Monthly budget limit in USD
MONTHLY_BUDGET_LIMIT=60.00

# Alert email (for budget alerts)
ALERT_EMAIL=your_email@example.com

# ========================================
# Optional: Proxy Configuration
# ========================================

# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080
# NO_PROXY=localhost,127.0.0.1

# ========================================
# Optional: Web UI Configuration
# ========================================

# Flask secret key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
FLASK_SECRET_KEY=your_secret_key_here

# Web UI port
WEB_UI_PORT=5000

# ========================================
# Optional: Cloud Storage (for production)
# ========================================

# AWS S3 (for storing generated images)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=designforge-assets
# AWS_REGION=us-east-1

# ========================================
# Optional: Monitoring & Analytics
# ========================================

# Sentry (error tracking)
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# PostHog (product analytics)
# POSTHOG_API_KEY=phc_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# POSTHOG_HOST=https://app.posthog.com
