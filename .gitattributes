# ArcForge Branding Automation - .gitattributes

# ============================================================================
# Line Ending Normalization
# ============================================================================

# Set default behavior to automatically normalize line endings
* text=auto

# ============================================================================
# Text Files
# ============================================================================

# Python
*.py text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf

# Shell scripts (always LF)
*.sh text eol=lf
*.bash text eol=lf

# YAML
*.yaml text eol=lf
*.yml text eol=lf

# Markdown
*.md text eol=lf
*.markdown text eol=lf

# JSON
*.json text eol=lf

# Configuration
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Documentation
*.txt text eol=lf
*.rst text eol=lf
LICENSE text eol=lf
CHANGELOG text eol=lf

# Web
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf

# ============================================================================
# Binary Files
# ============================================================================

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.webp binary

# Fonts
*.woff binary
*.woff2 binary
*.eot binary
*.ttf binary
*.otf binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.7z binary
*.rar binary

# Model files
*.ckpt binary
*.safetensors binary
*.pt binary
*.pth binary
*.onnx binary

# Databases
*.db binary
*.sqlite binary
*.sqlite3 binary

# Documents
*.pdf binary
*.doc binary
*.docx binary

# ============================================================================
# Export Settings (for GitHub linguist)
# ============================================================================

# Don't count generated files in language stats
automation/results/* linguist-generated=true
automation/data/* linguist-generated=true

# Don't count vendored files
automation/models/* linguist-vendored=true

# ============================================================================
# Diff Settings
# ============================================================================

# Python function context in diffs
*.py diff=python

# Use custom diff driver for YAML files
*.yaml diff=yaml
*.yml diff=yaml

# ============================================================================
# Merge Settings
# ============================================================================

# Don't merge generated files
automation/data/*.db merge=binary
automation/results/* merge=binary

# ============================================================================
# Large File Storage (LFS) - Optional
# ============================================================================

# Uncomment if using Git LFS for large model files
# *.ckpt filter=lfs diff=lfs merge=lfs -text
# *.safetensors filter=lfs diff=lfs merge=lfs -text
# *.pt filter=lfs diff=lfs merge=lfs -text
